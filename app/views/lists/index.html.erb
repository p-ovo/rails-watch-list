
<%= image_tag "theatre.jpg", alt: "Theatre", width: '100%', height: 400 %>
<div class="centered"><h2>Save any kind of movies<br>Classic</h2>
</div>


<br>
<br>


<div class="container">

  <div class="row">
    <div class="col-2"></div>

    <div class="col-8 d-flex justify-content-between">
      <h3>My Lists</h3>
      <a href="/lists/new" class= "btn btn-success">Create a movie list</a>
    </div>
    <div class="col-2"></div>
  </div>

  <div class = "row">
    <div class="col-4"></div>
    <div class="col-4 d-flex justify-content-between">

        <% @lists.each do |list| %>
        <div>
        <%= link_to "#{list.id}. #{list.name}", list_path(list) %><br>
        </div>
        <% end %>
    </div>
    <div class="col-4"></div>
  </div>
</div>
